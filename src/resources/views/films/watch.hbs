 <div class="app">
    <header class="header">
        <div class="grid">
            <nav class="header__navbar">
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="/" class="header__navbar-item-link">Trang chủ</a>
                    </li>
                </ul>
                <ul class="header__navbar-list">
                    <li class="header__navbar-item
                        header__navbar-item-has-notify">
                        <i class="fas fa-bell header__navbar-icon"></i>
                        <div onclick=viewNotify()
                            class="header__navbar-item-link">Thông báo</div>
                        <div class="header__notify">
                            <header class="header__notify-header">
                                <h3>Thông báo mới nhận</h3>
                            </header>
                            <ul class="header__notify-list"
                                id=header__notify-list>
                                <!-- <li class="header__notify-item header__notify-item--viewed">
                                        <a href="" class="header__notify-link">
                                            <img src="https://phimmoiizz.net/wp-content/uploads/2021/04/Godzilla-vs-Kong-poster.jpg"class="header__notify-img">
                                            <div class="header__notify-info">
                                                <span class="header__notify-name">Ten cua thong bao</span>
                                            </div>
                                        </a>
                                    </li> -->
                            </ul>
                        </div>
                    </li>
                    <li class="header__navbar-item">
                        <a href="" class="header__navbar-item-link">Đăng nhập</a>
                    </li>
                    <li class="header__navbar-item">
                        <a href="" class="header__navbar-item-link">Đăng xuất</a>
                    </li>
                    <li class="header__navbar-item">
                        <i class="fas fa-user-circle"></i>
                        <div onclick=showUserInfo()
                            class="header__navbar-item-link">Tài khoản</div>
                        <div class="header__userinfo" id="header__userinfo">
                            <div class="header__userinfo-logo">
                                <i class="fas fa-user-circle
                                    header__userinfo-logo-icon"></i>
                            </div>
                            <div class="header__userinfo-username">
                                Truong Giang Bui
                            </div>
                            <div class="header__userinfo-userlevel">
                                Admin
                            </div>
                            <button class="header__userinfo-history">
                                Xem lich su xem
                            </button>
                            <button class="header__userinfo-history">
                                Tai phim len
                            </button>
                        </div>
                    </li>
                </ul>
            </nav>
            <div class="header-with-search">
                <img src="/img/logo.png" alt="" class="header-logo">
                <div class="header__search">
                    <form class="header__search-form" action="/search">
                        <input name="keyword" type="text"
                            class="header__search-input" placeholder="Nhap ten phim">
                        <button type="submit" class="header__search-btn">
                            <i class="fas fa-search header__search-btn-icon"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <script>
                notifylist=[
                    {
                        "img":"https://phimmoiizz.net/wp-content/uploads/2021/04/Godzilla-vs-Kong-poster.jpg",
                        "notify_info": "Video tai len hoan tat",
                        "viewed":false
                    },
                    {
                        "img":"https://phimmoiizz.net/wp-content/uploads/2021/04/Godzilla-vs-Kong-poster.jpg",
                        "notify_info": "Video tai len hoan tat",
                        "viewed":true
                    },
                    {
                        "img":"https://phimmoiizz.net/wp-content/uploads/2021/04/Godzilla-vs-Kong-poster.jpg",
                        "notify_info": "Video tai len hoan tat",
                        "viewed":true
                    }
                ]
                function viewNotify(){
                    if(document.getElementsByClassName("header__notify")[0].style.display=="block"){
                        document.getElementsByClassName("header__notify")[0].style.display="none";
                    }
                    else{
                    var notify=document.getElementById("header__notify-list");
                    notify.innerHTML=""
                    notifylist.forEach(noti=>{
                    console.log(noti)
                    var htmlstring=`<li class="header__notify-item">
                                                <a href="" class="header__notify-link">
                                                    <img src="`
                                                    +noti.img+
                                                    `" class="header__notify-img">
                                                    <div class="header__notify-info">
                                                        <span class="header__notify-name">`
                                                    +noti.notify_info+`</span>
                                                    </div>
                                                </a>
                                            </li>`
                    var div = document.createElement('div');
                    div.innerHTML = htmlstring.trim();
                    if(noti.viewed) div.firstChild.classList.add("header__notify-item--viewed")
                    notify.appendChild(div.firstChild)
                    document.getElementsByClassName("header__notify")[0].style.display="block";
                })
                }}
                function showUserInfo()
                {
                    if(document.getElementById("header__userinfo").style.display=="none"){
                        document.getElementById("header__userinfo").style.display="block";
                    }else document.getElementById("header__userinfo").style.display="none";
                }
                
            </script>
    </header>
    <div class="container">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column-9">
                    <div class="grid__row" style="margin-top: 40px;">
                        <div class="grid__column-4">
                            <img src="{{film.poster_link}}" alt=""
                                class="film-poster">
                        </div>
                        <div class="grid__column-8">
                            <div class="film-detail">
                                <div class="film-name">
                                    <h1 class="film-detail-name">{{film.movie_name_eng}}</h1>
                                    <h1 class="film-detail-name">{{film.movie_name_vie}}</h1>
                                </div>
                                <div class="film-rate">
                                    <div class="film-idmb">
                                        <i class="fab fa-imdb film-idmb-icon"></i>{{film.idmb}}
                                    </div>
                                    <div class="film-status">{{film.status}}</div>
                                    <div class="film-resolution">{{film.resolution}}</div>
                                </div>

                                <div class="film-content__watch">
                                    <p class="film-content-text">
                                        {{film.film_content}}
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="grid__row">
                        <div class="film-watch-block">
                            <h1 class="film-content-header">Xem phim</h1>
                            <iframe class="watch-frame"
                                src="{{film.film_link}}"
                                title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write;
                                encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
                    </div>



                </div>
                 <div class="grid__column-3">
                    <nav class="category">
                        <h2 class="category__heading">
                            <i class="fas fa-list-ul
                                category__heading-icon"></i>
                            Top phim xem nhiều
                        </h2>
                        <ul class="category-list" id="most-views-list">
                            
                        </ul>
                        <script>
                                var most_views_list=document.getElementById("most-views-list");
                                fetch('http://localhost:3000/apis/mostviewsfilm')
                                .then(response=>{
                                    return response.json()
                                }).then(data=>{
                                    data.forEach(film=>{
                                    var htmlstring=`<li class="category-item">
                                    <a href="/films/`
                                    +film.slug
                                    +`" class="category-item__link">
                                        <img src="`
                                        +film.poster_link
                                        +`" alt="" class="category-item__img">
                                        <div class="category-item-info">
                                            <h4 class=category-item-title>`
                                        +film.movie_name_eng
                                        +`</h4>
                                            <div class="category-item-views">`
                                        +film.views+` lượt xem</div>
                                        </div>
                                    </a>
                                </li>`
                    
                                    most_views_list.innerHTML += htmlstring.trim();

                                    })
                                }).catch(err=>{
                                    console.log(err)
                                })
                            </script>
                    </nav>
                </div>

            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column-6 footer-contact">
                    <a href="" class="footer-link">
                        <i class="fab fa-facebook"></i> My facebook
                    </a>
                    <a href="" class="footer-link">
                        <i class="fas fa-envelope"></i> abcxyz@sis.edu.vn
                    </a>
                </div>
            </div>
        </div>
    </footer>
</div>