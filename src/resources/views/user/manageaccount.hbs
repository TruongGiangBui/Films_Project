<div class="app">
    <header class="header">
        <div class="grid">
            <nav class="header__navbar">
                <ul class="header__navbar-list">
                    <li class="header__navbar-item">
                        <a href="/" class="header__navbar-item-link">Trang chủ</a>
                    </li>
                </ul>
                <ul class="header__navbar-list">
                    <li class="header__navbar-item
                        header__navbar-item-has-notify">
                        <i class="fas fa-bell header__navbar-icon"></i>
                        <div onclick=viewNotify()
                            class="header__navbar-item-link">Thông báo</div>
                        <div class="header__notify">
                            <header class="header__notify-header">
                                <h3>Thông báo mới nhận</h3>
                            </header>
                            <ul class="header__notify-list"
                                id="header__notify-list">
                                
                            </ul>
                        </div>
                    </li>
                    <li class="header__navbar-item">
                        <a href="/user/login" class="header__navbar-item-link">Đăng nhập</a>
                    </li>
                    <li class="header__navbar-item" >
                            <i class="fas fa-user-circle"></i>
                            <div onclick=showUserInfo() class="header__navbar-item-link">Tài khoản</div>
                            <div class="header__userinfo" id="header__userinfo">
                                <div class="header__userinfo-logo">
                                    <i class="fas fa-user-circle header__userinfo-logo-icon"></i>
                                </div>

                            </div>
                        </li>
                        
                </ul>
            </nav>
            <div class="header-with-search">
                <img src="/img/logo.png" alt="" class="header-logo">
                <div class="header__search">
                    <form class="header__search-form" action="/search">
                        <input name="keyword" type="text"
                            class="header__search-input"
                            placeholder="Nhap ten phim">
                        <button type="submit"
                            class="header__search-btn">
                            <i class="fas fa-search
                                header__search-btn-icon"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column-9" style="margin-top:40px">
                        <div class="manage_film">
                            <h1 class="manage_film_header">Thông tin tài khoản</h1>
                            <div class="manage__account-tab">
                                <img src="https://www.adobe.com/content/dam/cc/us/en/creativecloud/design/discover/mascot-logo-design/mascot-logo-design_fb-img_1200x800.jpg" alt="" class="manage__account-avt">                                <div class="manage__account_info">
                                    <div class="manage__account_info-text">Tên người dùng: {{user.fullname}}</div>
                                    <div class="manage__account_info-text">Tên đăng nhập: {{user.username}}</div>
                                    <div class="admin_button" onclick=showchangepasswordtab()>Thay đổi mật khẩu</div>
                                </div>
                            </div>
                            <div class="change-password-tab" id="change-password-tab">
                                <form action="/user/apis/changepassword" class="change-password-form" method="POST">
                                    <div class="film__upload__box">
                                        <div class="film__upload__form-label">Mật khẩu cũ</div>
                                        <div class="film__upload__input-box"><input name="oldpassword" type="password" class="film__upload__input">
                                            </div>
                                    </div>
                                    <div class="film__upload__box">
                                        <div class="film__upload__form-label">Mật khẩu mới</div>
                                        <div class="film__upload__input-box"><input name="newpassword" type="password" class="film__upload__input">
                                            </div>
                                    </div>
                                    <div class="film__upload__box">
                                        <div class="film__upload__form-label">Xác nhận mật khẩu mới</div>
                                        <div class="film__upload__input-box"><input name="confirmnewpassword" type="password" class="film__upload__input">
                                            </div>
                                    </div>
                                    <div id="manage_account_alert"  class="manage_account_alert">{{alert}}</div>
                                    <div style="display: flex;justify-content: center;padding-top: 20px;">
                                        <input type="submit" class="admin_button confirm_change_btn" value="Đổi mật khẩu"></input>
                                    </div>
                                </form>
                            </div>
                            <script>
                                function showchangepasswordtab(){
                                    if(document.getElementById("change-password-tab").style.display=="block")
                                    document.getElementById("change-password-tab").style.display="none"
                                    else document.getElementById("change-password-tab").style.display="block"
                                }
                                var alerterr="{{alert}}";
                                if(alerterr!=""){
                                    document.getElementById("manage_account_alert").style.display="block";
                                    document.getElementById("change-password-tab").style.display="block"
                                }
                            </script>
                        </div>
                    </div>
                <div class="grid__column-3">
                    <nav class="category">
                        <h2 class="category__heading">
                            <i class="fas fa-list-ul
                                category__heading-icon"></i>
                            Top phim xem nhiều
                        </h2>
                        <ul class="category-list" id="most-views-list">
                            
                        </ul>
                        
                    </nav>
                </div>

            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="grid">
            <div class="grid__row">
                <div class="grid__column-6 footer-contact">
                    <a href="" class="footer-link">
                        <i class="fab fa-facebook"></i> My facebook
                    </a>
                    <a href="" class="footer-link">
                        <i class="fas fa-envelope"></i>
                        abcxyz@sis.edu.vn
                    </a>
                </div>
            </div>
        </div>
    </footer>
</div>
